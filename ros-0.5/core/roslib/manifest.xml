<package>
  <description brief="ROS library">

      Base dependencies and support libraries for ROS. 

  </description>
  <author>Ken Conley/kwc@willowgarage.com, Morgan Quigley/mquigley@cs.stanford.edu</author>
  <license>BSD</license>
  <review status="API cleared" notes=""/>
  <url>http://pr.willowgarage.com/wiki/roslib</url>
  <export>
    <cpp cflags="-I${prefix}/msg/cpp -I${prefix}/include `rosboost-cfg --cflags`" lflags="-Wl,-rpath,${prefix}/lib -L${prefix}/lib -lroslib"/>
  </export>
  <depend package="genmsg_cpp"/>

  <!-- for roslib.params -->
  <sysdepend package="python-yaml" os="ubuntu" version="7.04-feisty"/>
  <sysdepend package="python-yaml" os="ubuntu" version="7.10-gutsy"/>
  <sysdepend package="python-yaml" os="ubuntu" version="8.04-hardy"/>

  <sysdepend package="py25-yaml" os="macports" />

  <sysdepend package="PyYAML" os="centos" version="5.2"/>

  <rosdep name="python"/>
  <rosdep name="python-yaml"/>
  <rosdep name="bzip2"/>
  <rosdep name="zlib"/>
  <rosdep name="boost"/>
  
</package>
